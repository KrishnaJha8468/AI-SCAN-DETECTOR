{
  "manifest_version": 3,
  "name": "AI Scam Detector",
  "version": "1.0.0",
  "description": "Real-time protection against phishing, scams, and malicious websites powered by AI",
  "permissions": [
    "storage",
    "activeTab",
    "webNavigation",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",     
    "default_icon": {
      "16": "icons/safe-one.png",
      "32": "icons/safe-one.png",
      "48": "icons/safe-one.png",
      "128": "icons/safe-one.png"
    },
    "default_title": "AI Scam Detector"
  },
  "icons": {
    "16": "icons/safe-one.png",
    "32": "icons/safe-one.png",
    "48": "icons/safe-one.png",
    "128": "icons/safe-one.png"
  }
}